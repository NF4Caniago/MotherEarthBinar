<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AdapterGempaFr">

    <android.support.constraint.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempat_gempa"
                android:text="Tempat Gempa"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tgl_gempa"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tgl_gempa"
                android:text="Tanggal Gempa"
                android:layout_marginLeft="13dp"
                app:layout_constraintTop_toBottomOf="@id/tempat_gempa"
                app:layout_constraintRight_toLeftOf="@+id/waktu_gempa"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/waktu_gempa"
                android:text="Waktu Gempa"
                app:layout_constraintLeft_toRightOf="@+id/tgl_gempa"
                app:layout_constraintTop_toBottomOf="@id/tempat_gempa"
                app:layout_constraintBottom_toTopOf="@+id/SR"
        />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SR"
                android:text="8,1"
                app:layout_constraintTop_toBottomOf="@+id/tgl_gempa"


        />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SR"
                app:layout_constraintLeft_toRightOf="@id/SR"
                app:layout_constraintTop_toBottomOf="@+id/tgl_gempa"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_detail"
                android:text="Detail"
                app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>