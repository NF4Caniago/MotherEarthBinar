<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GempaFragment">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="terkini"
            android:id="@+id/btnFilterTerkini"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnFilterbawah5"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_filter_gempa"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 SR"
            android:id="@+id/btnFilterbawah5"
            app:layout_constraintLeft_toRightOf="@+id/btnFilterTerkini"
            android:background="@drawable/btn_filter_gempa"
            android:layout_marginLeft="40dp" tools:layout_editor_absoluteY="0dp"/>

    <Button
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFilteratas5"
            android:text="5 SR"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnFilterbawah5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_filter_gempa"
    />

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/gempa_rcv"
            app:layout_constraintTop_toBottomOf="@+id/btnFilterTerkini"
            app:layout_constraintBottom_toBottomOf="parent"
    />


</android.support.constraint.ConstraintLayout>